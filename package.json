{
  "name": "sideband",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "typecheck": "tsc --build tsconfig.check.json",
    "build": "tsc --build",
    "prepublishOnly": "bun run scripts/prepublish.ts",
    "release": "bun run prepublishOnly && bun changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.3",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "singleQuote": false,
    "semi": true
  }
}
